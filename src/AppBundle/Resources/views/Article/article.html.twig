{% extends "::base.html.twig" %}

{% block body %}
    <div class="col-md-10 col-md-push-1 backdiv">
        <a href="{{ path('homepage') }}"> <i class="fa fa-arrow-left fa-2x back"  aria-hidden="true"></i></a>
        <h5 class="total">Total: <span class="itemPrice">€{{ sum }}</span></h5>
    </div>

    <div class="col-md-8 col-md-push-2 adddiv">
        <img onclick='div_show()' class="add" src="{{ asset('img/add.png') }}">
    </div>

    {% for art in article %}

        <div class="col-md-5 col-md-push-1">
            <a class="selectpanel" href="{{ art.url }}">
            <div class="panel panel-default  panel--styled">
                <div class="panel-body">
                    <div class="col-md-12 panelTop">
                        <div class="col-md-4">
                            <img class="img-responsive" src="{{ art.photo }}" alt=""/>
                        </div>
                        <div class="col-md-8">
                            <h3>{{ art.nom }}</h3>
                            <p>{{ art.note }}</p>
                        </div>
                    </div>
                    <div class="col-md-12 panelBottom">
                        <div class="col-md-4 text-left">
                            <h5>Prix <span class="itemPrice">€{{ art.prix }}</span></h5>
                        </div>
                        <a class="fa fa-trash-o deletearticle" href="{{ path('deletearticle',{'article': art.id}) }}"></a>
                        <a class="fa fa-trash-o fa fa-pencil editarticle" href="{{ path('editarticle',{'article': art.id}) }}"></a>
                    </div>
                </div>
            </div>
            </a>
        </div>

    {% endfor %}



    <form method="post" id="contactForm">
        <a onclick='div_hide()' class="fa fa-times close"></a><br/>
        Nom <input type="text" name="nom"><br/>
        Photo <input type="text" name="photo"><br/>
        Url <input type="text" name="url"><br/>
        Prix <input type="number" name="prix"><br/>
        Note <textarea rows="4" cols="30" name="note"></textarea><br/>
        <input class="formBtn" type="submit" />
    </form>



<script>
    function div_show() {
        document.getElementById('contactForm').style.display = "block";
    };
    function div_hide(){
        document.getElementById('contactForm').style.display = "none";
    };
</script>

{% endblock %}
